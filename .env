# LightRAG environment configuration

# Server Configuration
WEBUI_TITLE='Clarity Engine'
WEBUI_DESCRIPTION="Simple and Fast Graph Based RAG System"

# Directory Configuration
# WORKING_DIR=./rag_storage
# INPUT_DIR=./inputs

# Logging level
LOG_LEVEL=INFO
VERBOSE=True

# Settings for document indexing
SUMMARY_LANGUAGE=English

# LLM Configuration
TIMEOUT=150
TEMPERATURE=0.5
MAX_ASYNC=4
MAX_TOKENS=32768
ENABLE_LLM_CACHE=true
ENABLE_LLM_CACHE_FOR_EXTRACT=true

# Ollama LLM configuration
LLM_BINDING=ollama
LLM_MODEL=llama3.2:latest
LLM_BINDING_HOST=http://host.docker.internal:11434

# Embedding Configuration
EMBEDDING_MODEL=bge-m3:latest
EMBEDDING_DIM=1024
EMBEDDING_BINDING=ollama
EMBEDDING_BINDING_HOST=http://host.docker.internal:11434

# Data storage selection - IMPORTANT: Use Neo4j for graph storage
LIGHTRAG_KV_STORAGE=PGKVStorage
LIGHTRAG_VECTOR_STORAGE=PGVectorStorage
LIGHTRAG_GRAPH_STORAGE=Neo4JStorage
LIGHTRAG_DOC_STATUS_STORAGE=PGDocStatusStorage

# PostgreSQL Configuration - for vector and KV storage
POSTGRES_HOST=lightrag_postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=lightrag

# Neo4j Configuration for local container - using correct variable names
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=neo-neo- 